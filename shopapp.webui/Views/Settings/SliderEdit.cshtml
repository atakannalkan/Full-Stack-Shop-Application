@model SliderModel
@{
    Layout="_AdminLayout";
}

<div class="container">
    <h2>Admin Slider Edit</h2>
    <hr>
    <div class="row mt-3">
        <div class="col-md-8">
            <form asp-controller="Settings" asp-action="SliderEdit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="row d-flex align-items-center mb-4">
                    <label asp-for="ImageUrl" class="col-form-label col-sm-2">Add Image</label>
                    <div class="col-sm-10 row">
                        <div class="col-12 col-sm-4 col-lg-3 mb-2">
                            <img src="/img/slider/@Model.ImageUrl" class="w-100">
                        </div>
                        <div class="col-12 col-sm-8 col-lg-9">
                            <input type="hidden" asp-for="ImageUrl">
                            <input type="file" class="form-control" name="file">
                        </div>
                    </div>
                </div>

                <div class="row d-flex align-items-center mb-3">
                    <label asp-for="ImageUrl" class="col-sm-2 col-form-label">Edit Image Url</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-12 d-flex flex-wrap">
                                @foreach (var item in ViewBag.AllImageUrl)
                                {
                                    <div class="form-check border rounded-2 me-1" style="width: 120px;">
                                        <label for="@item" class="" style="margin-left: 0px;">@(item.Length>6?item.Substring(0,6)+"...":item)<img src="/img/slider/@item" class="w-100"></label>
                                        <input type="radio" name="selectedImageUrl" @(Model.ImageUrl==item?"checked":"") value="@item" class="form-check-input" id="@item">
                                    </div>
                                }
                            </div>
                        </div>                        
                    </div>
                </div>
                <div class="row d-flex align-items-center mb-3">
                    <label asp-for="Order" class="col-sm-2 col-form-label">Order</label>
                    <div class="col-sm-10">
                        <span asp-validation-for="Order"></span> 
                        <input type="number" asp-for="Order" class="form-control" min="1" max="20">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10 offset-sm-2">
                        <div class="form-check">
                            <label asp-for="Active">Active</label>
                            <input type="checkbox" asp-for="Active" class="form-check-input">
                        </div>
                    </div>
                </div>
                

                <div class="row">
                    <div class="col-sm-10 offset-sm-2 mt-5">
                        <a href="/admin/settings" class="btn btn-secondary"><i class="fas fa-arrow-circle-left"></i> Back to list</a>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-save2" style="font-weight: 900;"></i> Save Slider</button>
                    </div>
                </div>                
            </form>
        </div>
    </div>

    
</div>