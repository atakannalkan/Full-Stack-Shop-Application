@model Slider
@{
    Layout="_AdminLayout";
}

<div class="container">
    <h2>Admin Slider Create</h2>
    <hr>

    <div class="row mt-3">
        <div class="col-md-8">            
            <form asp-controller="Settings" asp-action="SliderCreate" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="row d-flex align-items-center mb-4">
                    <label class="col-form-label col-sm-2">Add Image</label>
                    <div class="col-sm-10">
                        <input type="file" class="form-control" name="file">
                    </div>
                </div>

                <div class="row d-flex align-items-center mb-3">
                    <label asp-for="ImageUrl" class="col-sm-2 col-form-label">Edit Image Url</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-12 d-flex flex-wrap">
                                @foreach (var item in ViewBag.AllImageUrl)
                                {
                                    <div class="form-check border rounded-2 me-1" style="width: 120px;">
                                        <label for="@item" class="" style="margin-left: 0px;">@(item.Length>6?item.Substring(0,6)+"...":item)<img src="/img/slider/@item" class="w-100"></label>
                                        <input type="radio" name="selectedImageUrl" value="@item" class="form-check-input" id="@item">
                                    </div>
                                }
                            </div>
                        </div>  
                    </div>
                </div>
                <div class="row d-flex align-items-center mb-3">
                    <label asp-for="Order" class="col-sm-2 col-form-label">Order</label>
                    <div class="col-sm-10">
                        <span asp-validation-for="Order"></span>
                        <input type="number" asp-for="Order" class="form-control" min="1" max="20">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10 offset-sm-2">
                        <div class="form-check">
                            <input type="checkbox" asp-for="Active" class="form-check-input">
                            <label class="form-check-label" asp-for="Active">Active</label>                    
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-10 offset-sm-2 mt-5">
                        <a href="/admin/settings" class="btn btn-secondary"><i class="fas fa-arrow-circle-left"></i> Back to list</a>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Create</button>
                    </div>
                </div>                
            </form>

        </div>
    </div>
</div>